*
  transition opacity 0.75s
.ratiowpr
  box-sizing border-box
  padding-bottom 0
  height auto
li.invalid
  background-color #ded3a9
  &:hover
    cursor default
    background-color #ded3a9
.articlewpr
  section
    min-height 100vh
    .chart-container
      .ratiowpr
        height 100%
        &__chart
          position relative
          width 100%
          height 100%
          
          &__img
            position absolute
            top 50%
            left 0
            margin-top -25%
            width 100%
          &__desc
            position absolute
            top calc(100px)
            width 50%
            left 50%
            margin-left -25%
            font-size 18px
            line-height 1.5
            background-color rgba(255, 255, 255, 0.65)
            padding 20px
            border-radius 10px
          &.hichart
            max-height 65%
        img
          width 100%
      &.fix
        h3, .source
          opacity 0
          transition opacity 2s
        .ratiowpr
          &__chart
            opacity 0
            position fixed
            width calc(100% - 200px)
            height calc(100% - 100px)
          .hichart
            position fixed
            opacity 0
          .exception
            opacity 0
        // &.firstSection
        //   h3, .source
        //     opacity 1
    &.fadein
      .chart-container
        &.fix
          h3, .source
            opacity 1
          .ratiowpr
            &__chart, .hichart
              opacity 1
            .exception
              opacity 1
@keyframes cover-out
  0%
    width 0
  100%
    width 100%