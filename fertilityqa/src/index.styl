@keyframes cover-out
  0%
    width 0
  100%
    width 100%


/* SVG styling */
path {
	fill: #CED8B6;
}

line {
	stroke: #555;
	stroke-width: 2px;
}

line#bestfit {
	stroke: #ddd;
	stroke-width: 2px;
}

.high
  fill #f6613f
.low
  fill #f2c83d
.avg
  fill #00896c

#xAxis path, #yAxis path, #xAxis line, #yAxis line {
	stroke: #ccc;
	fill: none;
	shape-rendering: crispEdges;
}

text {
	font-size: 14px;
	fill: #000;
}